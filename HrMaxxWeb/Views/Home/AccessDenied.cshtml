@model System.Web.Mvc.HandleErrorInfo

@{
	ViewBag.Title = "Access Denied";
}
<div class="error">
	<div class="error-code m-b-10"><i class="fa fa-warning"></i></div>
	<div class="error-content">
		<div class="error-message">You do not have access to this area of the application.</div>
		<div class="error-desc m-b-20">
			@ViewBag.errorMessage
		</div>
		<div>
			<a href="@Url.Action("Index", "Home")" class="btn btn-success">Go Back to Home Page</a>
		</div>
	</div>
</div>

