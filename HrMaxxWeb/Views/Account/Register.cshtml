@model HrMaxxWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="register register-with-news-feed">
	<!-- begin news-feed -->
	<div class="news-feed">
		<div class="news-image">
			<img src="~/Content/images/bg-8.jpg" alt="" />
		</div>
		<div class="news-caption">
			<h4 class="caption-title"><i class="fa fa-edit text-success"></i> PAXOL</h4>
			<p>
				Successful Businesses Adapt to Internet Technology
			</p>
		</div>
	</div>
	<!-- end news-feed -->
	<!-- begin right-content -->
	<div class="right-content">
		<!-- begin register-header -->
		<h1 class="register-header">
			Sign Up
			<small>Create your HrMaxx Account.</small>
		</h1>
		<!-- end register-header -->
		<!-- begin register-content -->
		<div class="register-content">
			@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.ValidationSummary("", new { @class = "text-danger" })

				<label class="control-label">Name</label>
				<div class="row row-space-10">
					<div class="col-md-6 m-b-15">
						@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" , placeholder="First Name"})
					</div>
					<div class="col-md-6 m-b-15">
						@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder="Last Name" })
					</div>
				</div>
				<label class="control-label">Email</label>
				<div class="row m-b-15">
					<div class="col-md-12">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder="Email Address" })
					</div>
				</div>
				<label class="control-label">Password</label>
				<div class="row m-b-15">
					<div class="col-md-12">
						@Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="Password" })
					</div>
				</div>
				<label class="control-label">Confirm Password</label>
				<div class="row m-b-15">
					<div class="col-md-12">
						@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
					</div>
				</div>

				<div class="checkbox m-b-30">
					<label>
						<input type="checkbox" /> By clicking Sign Up, you agree to our <a href="#">Terms</a> and that you have read our <a href="#">Data Policy</a>, including our <a href="#">Cookie Use</a>.
					</label>
				</div>

				<div class="register-buttons">
					<button type="submit" class="btn btn-primary btn-block btn-lg">Sign Up</button>
				</div>
				<div class="m-t-20 m-b-40 p-b-40">
					Already a member? Click <a href="@Url.Action("Login", "Account")">here</a> to login.
				</div>
				
			}
			
		</div>
		<!-- end register-content -->
	</div>
	<!-- end right-content -->
</div>