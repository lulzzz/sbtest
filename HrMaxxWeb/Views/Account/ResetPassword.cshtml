@model HrMaxxWeb.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
		Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<h2>@ViewBag.Title.</h2>
<div class="register register-with-news-feed">
	<!-- begin news-feed -->
	<div class="news-feed">
		<div class="news-image">
			<img src="~/Content/images/bg-8.jpg" alt="" />
		</div>
		<div class="news-caption">
			<h4 class="caption-title"><i class="fa fa-edit text-success"></i> HrMaxx</h4>
			<p>
				Successful Businesses Adapt to Internet Technology
			</p>
		</div>
	</div>
	<!-- end news-feed -->
	<!-- begin right-content -->
	<div class="right-content">
		<!-- begin register-header -->
		<h1 class="register-header">
			Reset Password
		</h1>
		<!-- end register-header -->
		<!-- begin register-content -->
		<div class="register-content">
			@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
	
				@Html.ValidationSummary("", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.Code)
				<label class="control-label">Email</label>
				<div class="row m-b-15">
					<div class="col-md-12">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address" })
					</div>
				</div>
				<label class="control-label">Password</label>
				<div class="row m-b-15">
					<div class="col-md-12">
						@Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
					</div>
				</div>
				<label class="control-label">Confirm Password</label>
				<div class="row m-b-15">
					<div class="col-md-12">
						@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
					</div>
				</div>

				<div class="register-buttons">
					<button type="submit" class="btn btn-primary btn-block btn-lg">Reset</button>
				</div>
				<div class="m-t-20 m-b-40 p-b-40">
					Already a member? Click <a href="#modal-dialog" data-toggle="modal">here</a> to login. to login.
				</div>

			}

		</div>
		<!-- end register-content -->
	</div>
	<!-- end right-content -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
