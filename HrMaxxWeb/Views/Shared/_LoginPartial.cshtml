@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
	<li class="dropdown navbar-user">
		


		<a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
			<img src="@CurrentUser.Photo" alt="" /> 
			<span class="hidden-xs">@CurrentUser.FullName</span> <b class="caret"></b>
		</a>
			<ul class="dropdown-menu animated fadeInLeft">
				
				<li class="arrow"></li>
				<li><a href="@Url.Action("News","Manage", new { area=""})">My News</a></li>
				<li><a href="@Url.Action("Index","Manage", new { area=""})">My Profile</a></li>
				<li class="divider"></li>
				<li>
					@using (Html.BeginForm("LogOff", "Account", new {area=""}, FormMethod.Get, new {id = "logoutForm", @class = "navbar-right"}))
					{
						@Html.AntiForgeryToken()
					}
					<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
				</li>
			</ul>
		
	</li>
}
else
{
    
	<li class="navbar-user">
		<a href="#modal-dialog" class="btn btn-sm btn-success" data-toggle="modal">Log in</a>
		
	</li>
	
}
