						<span>Administration</span>
					</a>
					<ul class="sub-menu">
						<li><a href="#!/Admin/HostList">Manage Host</a></li>
						<li><a href="#!/Admin/NewsList">News & Announcements</a></li>
						<li><a href="#!/Admin/UserList">Users</a></li>
						
					</ul>
				</li>
			}
			@if (CurrentUser.IsInRole(RoleTypeEnum.Host.GetDbName()))
			{
				<li><a href="#!/Admin/Host"><i class="fa fa-home"></i><span>Host Profile</span></a></li>
				
			}
			<li><a href="#!/Client/Company"><i class="fa fa-home"></i><span>Company</span></a></li>
